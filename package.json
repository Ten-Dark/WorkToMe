{
  "name": "worktome",
  "packageManager": "yarn@4.6.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx}\"",
    "lint": "eslint --ignore-path .gitignore .",
    "lint:fix": "eslint --fix --ignore-path .gitignore .",
    "lint:check": "eslint --ignore-path .gitignore . --ext .js,.jsx,.ts,.tsx --format=checkstyle > eslint-checkstyle-report.xml"
  },
  "devDependencies": {
    "eslint": "^9.21.0",
    "@eslint/js": "^9.21.0",
    "eslint-plugin-react": "^7.37.4",
    "typescript-eslint": "^8.25.0",
    "prettier": "3.5.2",
    "globals": "^16.0.0"
  }
}
